<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".HomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ban1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/customborder3"
            android:scaleType="fitXY"
            android:layout_marginTop="120dp"
            android:src="@drawable/banner000" />

        <TextView
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/ban1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/tabbar2"
            android:gravity="center"
            android:text="VICTOR SPORTS ODDS TIPS GUIDE"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:contentDescription="@string/click_to_nextpage"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn2"
            android:layout_below="@id/btn1"
            android:gravity="center"
            android:background="@drawable/tabbar2"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:contentDescription="@string/click_to_nextpage"
            android:text="VICTOR SPORTS ODDS LIBRARY"/>

        <TextView
            android:id="@+id/btn3"
            android:layout_below="@id/btn2"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_height="50dp"
            android:background="@drawable/tabbar2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:contentDescription="@string/click_to_nextpage"
            android:text="ABOUT VICTOR SPORTS ODDS"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>